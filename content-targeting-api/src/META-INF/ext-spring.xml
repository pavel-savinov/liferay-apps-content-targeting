<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

	<!-- Destinations -->

	<bean id="destination.anonymous_user_segments" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg name="name" value="liferay/anonymous_user_segments" />
		<constructor-arg name="workersCoreSize" value="25" />
		<constructor-arg name="workersMaxSize" value="50" />
	</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.content.targeting.messaging.config.AnonymousUserUserSegmentsPluginMessagingConfigurator">
		<property name="destinations">
			<list>
				<ref bean="destination.anonymous_user_segments" />
			</list>
		</property>
		<property name="anonymousUserSegmentsMessageDestination" value="liferay/anonymous_user_segments" />
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/hot_deploy">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.anonymous_user_segments_hot_deploy_listener" />
					</list>
				</entry>
				<entry key="liferay/anonymous_user_segments">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.anonymous_user_segments_listener" />
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<!-- Listeners -->

	<bean id="messageListener.anonymous_user_segments_listener" class="com.liferay.content.targeting.messaging.AnonymousUserUserSegmentsMessageListener" />
	<bean id="messageListener.anonymous_user_segments_hot_deploy_listener" class="com.liferay.content.targeting.messaging.AnonymousUseUserSegmentsHotDeployMessageListener">
		<constructor-arg>
			<map>
				<entry key="anonymousUserSegmentsMessageListener" value-ref="messageListener.anonymous_user_segments_listener" />
				<entry key="anonymousUserSegmentsMessageDestination" value="liferay/anonymous_user_segments" />
			</map>
		</constructor-arg>
		<constructor-arg name="servletContextNames">
			<array>
				<value>content-targeting-api</value>
			</array>
		</constructor-arg>
	</bean>

</beans>